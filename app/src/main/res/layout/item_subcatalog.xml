<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<com.google.android.material.card.MaterialCardView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:checkable="true"
		android:clickable="true"
		android:focusable="true"
		app:cardCornerRadius="@dimen/m055"
		app:cardElevation="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="1.2:1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/image"
		style="@style/CardImageView.Category"
		android:layout_width="@dimen/m0"
		android:layout_height="@dimen/m0"
		app:layout_constraintBottom_toTopOf="@id/title"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@android:drawable/star_big_off" />

	<TextView
		android:id="@+id/title"
		style="@style/CardTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toTopOf="@id/addButton"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		tools:text="text for test" />

	<com.google.android.material.button.MaterialButton
		android:id="@+id/addButton"
		style="@style/AddButtonStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/m1"
		android:layout_marginEnd="@dimen/m1"
		android:layout_marginBottom="@dimen/m15"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>